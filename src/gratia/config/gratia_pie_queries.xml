    <query name="osg_project_hours" base="GratiaGenericQuery.simple_glidein_master_summary">
        <inputs>
            <input name="resource-type" kind="sql"> BatchPilot </input>
            <input kind="sql" type="float" name="min_hours"> 10 </input>
            <input name="starttime" partial="down" type="datetime" kind="sql">time.time()-14*86400</input>
         </inputs>
      <sql>
        <filler name="group"> UPPER(ReportableProjectName) </filler>
        <filler name="column"> sum(R.Cores*R.WallDuration)/3600 as WallHours </filler>
        <filler name="having"> HAVING sum(R.Cores*R.WallDuration)/3600 >= :min_hours </filler>
        <filler name="join"> JOIN ProjectNameCorrection PNC ON (PNC.ProjectNameCorrid=R.ProjectNameCorrid) </filler>
        <filler name="where"> AND (NOT (ReportableProjectName regexp "unknown|other")) </filler>
      </sql>
      <attribute name="pivot_name"> PNC </attribute>
      <attribute name="column_names"> WallHours </attribute>
      <attribute name="column_units"> Hours </attribute>
      <attribute name="title"> Wall Hours by VO </attribute>
    </query>

    <query name="osg_fos_hours" base="GratiaGenericQuery.simple_glidein_master_summary">
        <inputs>
          <input name="resource-type" kind="sql"> BatchPilot </input>
          <input kind="sql" type="float" name="min_hours"> 10 </input>
          <input name="starttime" partial="down" type="datetime" kind="sql">time.time()-14*86400</input>
          <input name="projectname" kind="sql"> .* </input>
          <input name="exclude-projectname" kind="sql"> NONE </input>
          <input name="fos">.*</input>
          <input name="exclude-fos">NONE</input>  
        </inputs>
      <sql>
        <filler name="group">UPPER(VO.VOName), UPPER(PNC.ReportableProjectName)</filler>
        <filler name="column"> sum(R.Cores*R.WallDuration)/3600 as WallHours </filler>
        <filler name="having"> HAVING sum(R.Cores*R.WallDuration)/3600 >= :min_hours </filler>
        <filler name="join"> JOIN ProjectNameCorrection PNC ON (PNC.ProjectNameCorrid=R.ProjectNameCorrid) </filler>
        <filler name="where"> 
          AND PNC.ReportableProjectName regexp :projectname  
          AND (NOT (PNC.ReportableProjectName regexp :exclude-projectname))
        </filler>
      </sql>
      <attribute name="title">Wall Hours by Field of Science</attribute>
      <attribute name="pivot_name">FOS</attribute>
      <attribute name="grouping_name">Time</attribute>
      <attribute name="column_names">Wall Time</attribute>
      <attribute name="column_units">Hours</attribute>
      <results>
        <inputs>
          <input name="pivots"> 0,1 </input>
          <input name="results"> 2 </input>
          <input name="pivot_transform">oim_vo_project_fos_filter</input>
          <input name="grouping_transform">make_int</input>
        </inputs>
      </results>
    </query>

